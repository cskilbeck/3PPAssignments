@model Who.Models.AccountSet
@{
    ViewBag.Title = "3PP Account Assignments";
    if (Model == null)
    {
        Response.Redirect("/Regions/Index");
        return;
    }
}
                <div class="display-field">
                @if (Model.Error != null)
                {
                    <p>
                        <div>@Model.Error</div>
                    </p>
                }
                else
                {
                    <div id="account-list">
                        <span>
                            <input class="search" placeholder="Search" />
                        </span>
                        <span class="float-right">
                            <button onclick="doExport()">Export</button>
                        </span>
                        <table id="myTable">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    @foreach (var t in Model.Roles)
                                    {
                                    <th>@t</th>
                                    }
                                </tr>
                            </thead>
                            <tbody class="list">
                            @foreach (var a in Model.Accounts)
                            {
                                <tr>
                                    <td class="Name">
                                        @{
                                            string link = "https://edcrm/PRISM/sfa/accts/edit.aspx?id=%7b";
                                            link += a.Value.Guid;
                                            link += "%7d";
                                            }
                                        <a href="@link">@a.Key</a>
                                        </td>
                                    @foreach (var t in Model.Roles)
                                    {
                                        if (a.Value.Managers.ContainsKey(t))
                                        {
                                    <td class="@t">@a.Value.Managers[t].Name</td>
                                        }
                                        else
                                        {
                                    <td class="@t">-</td>
                                        }
                                    }
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
                </div>
                <script src="~/Scripts/list.min.js"></script>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                <script src="~/Scripts/html2CSV.js"></script>
                <script>
                    list = new List('account-list', { valueNames: ['Name'@foreach(var t in Model.Roles) { @MvcHtmlString.Create(",'" + t.ToString() + "'"); }], page: 9999 });
                    doExport = function () {
                        var blob = new Blob([$('#myTable').table2CSV({ header: ['Name'@foreach(var t in Model.Roles) { @MvcHtmlString.Create(",'" + t.ToString() + "'"); }] })], { type: 'text/csv;charset=utf-8' });
                        window.saveAs(blob, "accounts.csv");
                    }
                </script>
